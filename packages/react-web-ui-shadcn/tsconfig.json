{
  "extends": "@loyalty-system/tsconfig/react-library.json",
  "compilerOptions": {
    "types": ["vitest/globals", "@testing-library/jest-dom", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./__tests__/*"],
      "@mocks/*": ["./__mocks__/*"]
    }
  },
  "include": ["src", "__tests__", "__mocks__", ".storybook"],
  "exclude": ["node_modules"]
}
