{
  "name": "@loyalty-system/api",
  "version": "1.0.0",
  "private": true,
  "description": "NestJS - Loyalty System API",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "build": "nest build",
    "db:create": "f() { drizzle-kit generate --custom --name=$1; }; f",
    "db:generate": "drizzle-kit generate",
    "db:generate:name": "f() { drizzle-kit generate --name=$1; }; f",
    "db:migrate": "node -r ts-node/register ./src/database/migrate.ts",
    "db:seed": "node -r ts-node/register -r tsconfig-paths/register ./src/database/seeders/seed.ts",
    "db:studio": "drizzle-kit studio",
    "drizzle:push": "drizzle-kit push",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "gen:random32": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
    "lint": "eslint",
    "start:dev": "cross-env nest start --exec \"node --experimental-require-module\" --watch",
    "start:prod": "node --experimental-require-module dist/main",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@loyalty-system/prettier-config",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.12",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/swagger": "^11.1.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "argon2": "^0.41.1",
    "axios": "^1.8.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.11",
    "decimal.js": "^10.5.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "drizzle-seed": "^0.3.1",
    "express": "^5.1.0",
    "file-type": "^20.4.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.1.0",
    "libphonenumber-js": "^1.11.17",
    "lodash": "^4.17.21",
    "nestjs-cls": "^5.4.2",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "patch-package": "^8.0.0",
    "pg": "^8.14.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.2.0",
    "sharp": "^0.34.1",
    "slugify": "^1.6.6",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@loyalty-system/eslint-config": "workspace:*",
    "@loyalty-system/prettier-config": "workspace:*",
    "@loyalty-system/tsconfig": "workspace:*",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.12",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.13",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/multer": "1.4.12",
    "@types/node": "^22.13.11",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.0",
    "eslint": "catalog:",
    "jest": "^29.7.0",
    "prettier": "catalog:",
    "supertest": "^6.1.3",
    "ts-jest": "^29.1.3",
    "ts-loader": "^9.4.4"
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=22.13.0"
  }
}
